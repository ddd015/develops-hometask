# -*- mode: ruby -*-
# vi: set ft=ruby :


Vagrant.configure("2") do |config|

  config.vm.box = "debian10"

  config.vm.network "forwarded_port", guest: 80, host: 8080
  config.vm.network "forwarded_port", guest: 81, host: 8081

#  config.ssh.username = "vagrant"
#  config.ssh.password = "vagrant"
#  config.ssh.insert_key = false
#  config.vm.synced_folder ".", "/vagrant"

  config.vm.provision "shell", inline: <<-SHELL
#        sudo setsebool -P httpd_unified 1
	sudo apt update
	sudo apt install -y lxc lxc-templates
	sudo iptables-restore /vagrant/iptables.conf
	sudo cp /vagrant/default.conf /etc/lxc/
	sudo cp /vagrant/lxc-net /etc/default/

	sudo lxc-create -n centos1 -t download -- --dist centos --rease 8-Stream --arc amd64
	sudo cp /vagrant/config1 /var/lib/lxc/centos1/config
	sudo lxc-start -n cenos1
	sudo sleep 5s
	sudo lxc-attach -n centos1 yum update
	sudo lxc-attach -n centos1 yum install httpd
	sudo lxc-attach -n centos1 systemctl enable httpd
	sudo lxc-attach -n centos1 systemctl start httpd
	sudo lxc-attach -n centos1 mkdir -p /var/www/static/html
	sudo lxc-attach -n centos1 chmod -R 0755 /var/www/static/html
	sudo cp /vagrant/index.html /var/lib/lxc/centos1/rootfs/var/www/static/html
	sudo lxc-attach -n centos1 mkdir /etc/httpd/sites-available
	sudo lxc-attach -n centos1 mkdir /etc/httpd/sites-enabled
	sudo cp /vagrant/static.conf /var/lib/lxc/centos1/rootfs/etc/httpd/sites-available/
	sudo lxc-attach -n centos1 ln -s /etc/httpd/sites-available/static.conf /etc/httpd/sites-enabled/static.conf
	sudo lxc-attach -n centos1 systemctl restart httpd

	sudo lxc-create -n centos2 -t download -- --dist centos --rease 8-Stream --arc amd64
	sudo cp /vagrant/config2 /var/lib/lxc/centos2/config
	sudo lxc-start -n cenos2
	sudo sleep 5s
	sudo lxc-attach -n centos2 yum update
	sudo lxc-attach -n centos2 yum install httpd
	sudo lxc-attach -n centos2 systemctl enable httpd
	sudo lxc-attach -n centos2 systemctl start httpd
	sudo lxc-attach -n centos2 mkdir -p /var/www/dynamic/html
	sudo lxc-attach -n centos2 chmod -R 0755 /var/www/dynamic/html
	sudo cp /vagrant/index.php /var/lib/lxc/centos2/rootfs/var/www/dymanic/html
	sudo lxc-attach -n centos2 mkdir /etc/httpd/sites-available
	sudo lxc-attach -n centos2 mkdir /etc/httpd/sites-enabled
	sudo cp /vagrant/dynamic.conf /var/lib/lxc/centos2/rootfs/etc/httpd/sites-available/
	sudo lxc-attach -n centos2 ln -s /etc/httpd/sites-available/dynamic.conf /etc/httpd/sites-enabled/dynamic.conf
	sudo lxc-attach -n centos2 sudo chcon -R --type=httpd_sys_rw_content_t /var/www/dynamic/html
	sudo cp /vagrant/httpd.conf /var/lib/lxc/centos2/rootfs/etc/httpd/conf/ #подпарвит файл
	sudo lxc-attach -n centos2 systemctl restart httpd

  
end
